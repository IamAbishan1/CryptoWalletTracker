#!/bin/bash

# Validate commit message format
if ! head -1 "$1" | grep -qE "^(feat|fix|ci|chore|docs|test|style|refactor|pref|build|revert)(\(.+?\))?: .{1,}$"; then
    echo "âŒ Aborting commit âŒ. Your commit message is invalid. Please check conventional commit message and try again. âœ…" >&2
    exit 1
fi

# Validate commit message length
if ! head -1 "$1" | grep -qE "^.{1,200}$"; then
    echo "âŒ Aborting commit âŒ. Your commit message is too long. ðŸŽ‹ðŸŽ" >&2
    exit 1
fi

# If all validations pass, allow the commit
exit 0
